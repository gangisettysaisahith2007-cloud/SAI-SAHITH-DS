#include <stdio.h>
#include <limits.h>

int reverse(int x) {
    long rev = 0; // use long to check overflow
    while (x != 0) {
        rev = rev * 10 + x % 10;
        x /= 10;
    }
    if (rev < INT_MIN || rev > INT_MAX) return 0; // overflow check
    return (int)rev;
}

int main() {
    int n;
    printf("Enter number: ");
    scanf("%d", &n);
    printf("Reversed: %d\n", reverse(n));
    return 0;
}
