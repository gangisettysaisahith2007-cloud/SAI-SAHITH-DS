#include <stdio.h>
#define INF 999
#define V 5

int minDist(int dist[], int visited[]){
    int min=INF, idx=-1;
    for(int i=0;i<V;i++)
        if(!visited[i] && dist[i]<=min){ min=dist[i]; idx=i; }
    return idx;
}

void dijkstra(int graph[V][V], int src){
    int dist[V], visited[V]={0};
    for(int i=0;i<V;i++) dist[i]=INF;
    dist[src]=0;
    for(int c=0;c<V-1;c++){
        int u=minDist(dist,visited);
        visited[u]=1;
        for(int v=0;v<V;v++)
            if(!visited[v] && graph[u][v] && dist[u]+graph[u][v]<dist[v])
                dist[v]=dist[u]+graph[u][v];
    }
    printf("Vertex \t Distance\n");
    for(int i=0;i<V;i++) printf("%d \t %d\n",i,dist[i]);
}

int main(){
    int graph[V][V]={{0,10,0,5,0},
                     {10,0,1,2,0},
                     {0,1,0,9,2},
                     {5,2,9,0,3},
                     {0,0,2,3,0}};
    dijkstra(graph,0);
    return 0;
}
