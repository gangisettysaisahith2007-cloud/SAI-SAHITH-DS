#include <stdio.h>

int main() {
    int a[10][10], row, col, i, j;

    printf("Enter number of rows: ");
    scanf("%d", &row);
    printf("Enter number of columns: ");
    scanf("%d", &col);

    printf("Enter matrix elements:\n");
    for (i = 0; i < row; i++) {
        for (j = 0; j < col; j++) {
            scanf("%d", &a[i][j]);
        }
    }

    // Row sums
    for (i = 0; i < row; i++) {
        int sum = 0;
        for (j = 0; j < col; j++) {
            sum += a[i][j];
        }
        printf("Sum of row %d = %d\n", i + 1, sum);
    }

    // Column sums
    for (j = 0; j < col; j++) {
        int sum = 0;
        for (i = 0; i < row; i++) {
            sum += a[i][j];
        }
        printf("Sum of column %d = %d\n", j + 1, sum);
    }

    return 0;
}
